<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
        <%- include('../partials/validator'); %>
        <%- include('../partials/fieldmatch'); %>

</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="container">

            <div class="col-sm-6 col-sm-offset-3">

                <h1><span id="signup" class="fa fa-sign-in"></span> New User</h1>

                <!-- SIGNUP FORM -->
                <form action="/signup" id="signup" method="post" onkeyup="check();">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" name="username">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" id='password' class="form-control" name="password">
                    </div>
                    <div class="form-group">

                        <!-- Enter Password. -->
                        <label>Confirm Password</label>
                        <input type="password" id="confirm_password" class="form-control" name="password_confirm">
                    </div>
                    <div>
                        <span id="message"></span>
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Sign up</button>
                </form>
                <script type="text/javascript">
                    const formValidator = new Validator("signup");

                    formValidator.addValidation("username", "req", "Please enter your username");
                    formValidator.addValidation("username", "maxlen=20", "Max username length of 20 characters");
                    formValidator.addValidation("username", "minlen=4", "Min username length of 4");

                    formValidator.addValidation("email", "req", "Please enter your email");
                    formValidator.addValidation("email", "email", "Please enter valid email");

                    formValidator.addValidation("password", "req", "Please enter your password");
                    formValidator.addValidation("password", "maxlen=32", "Max password length of 32 characters");
                    formValidator.addValidation("password", "minlen=5", "Min password length of 5");
                    
                    formValidator.addValidation("password_confirm", "req", "Please confirm your password");
                    formValidator.addValidation("password_confirm", "maxlen=32", "Max password length of 32 characters");
                    formValidator.addValidation("password_confirm", "minlen=5", "Min password length of 5");

                </script>
                <hr>
            </div>

        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>